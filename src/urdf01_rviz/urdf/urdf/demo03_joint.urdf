<!-- 设置机器人底盘 添加摄像头 -->
<robot name="mycar">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.3 0.2 0.1"/>
            </geometry>
            <material name="color">
                <color rgba="0.0 0.0 1 0.5"/>
            </material>
        </visual>   
    </link>
    <!-- link 2 摄像头 -->
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.03 0.05 0.05"/>
            </geometry>
            <!-- 后期修改 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            
            <material name="camare_color">
                <color rgba="1 0.0 0 1"/>
            </material>
        </visual>   
    </link>
    <!-- 关节 -->
    <joint name="camera2base" type="continuous">
        <!-- 父级link -->
        <parent link="base_link"/>
        <child link="camera_link"/>   
        <!-- 子级link -->
        <!-- 设置偏移量 -->
        <origin xyz="0.13 0.0 0.075" rpy="0.0 0.0 0.0"/>
        <!-- 设置旋转参考坐标轴 -->
        <axis xyz="0.0 0.0 1"/>       
    </joint>
</robot>