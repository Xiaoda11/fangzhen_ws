<!--
    使用 xacro 优化 URDF 版的小车底盘实现：

    实现思路:
    1.将一些常量、变量封装为 xacro:property
      比如:PI 值、小车底盘半径、离地间距、车轮半径、宽度 ....
    2.使用 宏 封装驱动轮以及支撑轮实现，调用相关宏生成驱动轮与支撑轮

-->
<!-- 根标签，必须声明 xmlns:xacro -->
<robot name="my_car" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- 封装变量、常量 -->
    <xacro:property name="PI" value="3.141"/>
    <!-- 宏:黑色设置 -->
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
    </material>
    <!-- 底盘属性 -->
    <xacro:property name="base_footprint_radius" value="0.001" /> <!-- base_footprint 半径  -->
    <xacro:property name="base_link_radius" value="0.15" /> <!-- base_link 半径 -->
    <xacro:property name="base_link_length" value="0.07" /> <!-- base_link 长 -->
    <xacro:property name="earth_space" value="0.06" /> <!-- 离地间距 -->

    <!-- 底盘 -->
    <link name="base_footprint">
      <visual>
        <geometry>
          <sphere radius="${base_footprint_radius}" />
        </geometry>
      </visual>
    </link>

    <link name="base_link">
      <visual>
        <geometry>
          <cylinder radius="${base_link_radius}" length="${base_link_length}" />
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <material name="black">
          <color rgba="0 0 0.0 1" />
        </material>
      </visual>
    </link>

    <joint name="base_link2base_footprint" type="fixed">
      <parent link="base_footprint" />
      <child link="base_link" />
      <origin xyz="0 0 ${earth_space + base_link_length / 2 }" />
    </joint>
        <!-- Laser Radar link -->
     <link name="laser_radar">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> 
            <geometry>
                <cylinder radius="0.025" length="0.04"/> 
            </geometry>
            <material name="laser_radar_color">
                <color rgba="0.7 0.7 0.7 1.0"/>               
            </material>
        </visual>       
    </link>
    <!-- laser_radar2base_link  -->
    <joint name="laser_radar2base_link" type="fixed">
        <origin xyz="0.0 0.0 0.055" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="laser_radar"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <!--wheel link -->
     <xacro:property name="wheel_radius" value="0.04" /> <!-- 支撑轮半径 -->

    <!-- wheel宏 -->
    <xacro:macro name="add_wheel" params="name flag1 flag2" >
      <link name="${name}_wheel">
        <visual>
            <geometry>
                <sphere radius="${wheel_radius}" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="wheel_color">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
        </visual>
      </link>

      <joint name="${name}_wheel2base_link" type="continuous">
          <parent link="base_link" />
          <child link="${name}_wheel" />
          <origin xyz="${flag1} ${flag2} ${-(base_link_length / 2 + earth_space / 2)+0.01}" />
          <axis xyz="1 1 0" />
      </joint>
    </xacro:macro>
    <xacro:add_wheel name="1" flag1="-0.14" flag2="0"/>
    <xacro:add_wheel name="2" flag1="0.07" flag2="0.121244"/>
    <xacro:add_wheel name="3" flag1="0.07" flag2="-0.121244"/>

</robot>
